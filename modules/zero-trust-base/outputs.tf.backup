# Re-export important outputs from base module
output "vpc_id" {
  description = "ID of the VPC"
  value       = module.zero_trust_base.vpc_id
}

output "alb_dns_name" {
  description = "DNS name of the Application Load Balancer"
  value       = module.zero_trust_base.alb_dns_name
}

output "alb_arn" {
  description = "ARN of the Application Load Balancer"
  value       = module.zero_trust_base.alb_arn
}

output "public_subnet_ids" {
  description = "IDs of public subnets"
  value       = module.zero_trust_base.public_subnet_ids
}

output "private_subnet_ids" {
  description = "IDs of private subnets"
  value       = module.zero_trust_base.private_subnet_ids
}

output "web_instance_ids" {
  description = "IDs of web tier instances"
  value       = module.zero_trust_base.web_instance_ids
}

output "app_instance_ids" {
  description = "IDs of app tier instances"
  value       = module.zero_trust_base.app_instance_ids
}

output "db_instance_ids" {
  description = "IDs of database tier instances"
  value       = module.zero_trust_base.db_instance_ids
}